#ifndef EPODE_UTIL_H
#define EPODE_UTIL_H

namespace epode
{
namespace util
{

template<typename Value>
inline Value lastInitElement(std::initializer_list<Value> _init) {
    auto it = _init.begin();
    Value last = *it;
    for(; it != _init.end(); ++it) {
        last = *it;
    }
    return last;
}

} /*namespace util*/
} /*namespace epode*/

#endif // EPODE_UTIL_H

